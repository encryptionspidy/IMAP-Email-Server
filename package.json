{
  "name": "imap-email-server",
  "version": "1.0.0",
  "description": "Serverless REST HTTP API for IMAP email server connectivity",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && sls offline start",
    "local": "npm run build && node dist/local-server.js",
    "local:dev": "ts-node src/local-server.ts",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "npm run build && sls deploy",
    "deploy:prod": "npm run build && sls deploy --stage prod",
    "clean": "rm -rf dist node_modules package-lock.json"
  },
  "keywords": [
    "imap",
    "email",
    "serverless",
    "aws-lambda",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/imapflow": "^1.0.23",
    "@types/mailparser": "^3.4.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "imapflow": "^1.0.189",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "sanitize-html": "^2.11.0",
    "serverless-http": "^3.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.19.4",
    "@types/nodemailer": "^6.4.14",
    "@types/sanitize-html": "^2.9.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "serverless": "^4.17.1",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
